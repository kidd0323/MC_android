<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical" 
        android:background="@drawable/set">


    <Button
        android:id="@+id/loginout"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/button_changeusrb" />

    <Button
        android:id="@+id/modifyinfo"
        android:layout_width="142dp"
        android:layout_height="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_modifyinfo" />

    <Button
        android:id="@+id/feedback"
        android:layout_width="144dp"
        android:layout_height="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_feedback" />

    <Button
        android:id="@+id/guide"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_guide" />

    <Button
        android:id="@+id/official"
        android:layout_width="145dp"
        android:layout_height="31dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_official" />

    <Button
        android:id="@+id/about"
        android:layout_width="145dp"
        android:layout_height="32dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_about" />

    <Button
        android:id="@+id/inviteFriend"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.01"
        android:background="@drawable/button_invitefriend" />

    <Button
        android:id="@+id/setback"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:background="@drawable/button_cancel" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" >

    </LinearLayout>

</LinearLayout>